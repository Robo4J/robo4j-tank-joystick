<robo4j>
    <roboUnit id="httpClient">
        <class>com.robo4j.core.httpunit.HttpClientUnit</class>
        <config name="com.robo4j.core.root">
            <value name="address" type="String">192.168.22.250</value>
            <value name="port" type="int">8025</value>
            <targetUnits>
                <value name="controller" type="String">POST</value>
            </targetUnits>
        </config>
    </roboUnit>

    <roboUnit id="httpServer">
        <class>com.robo4j.core.httpunit.HttpServerUnit</class>
        <config name="com.robo4j.core.root">
            <value name="port" type="int">8027</value>
            <value name="target" type="String">imageController</value>
            <value name="packages" type="String">com.robo4j.core.httpunit.codec</value>
            <targetUnits>
                <value name="imageController" type="String">POST</value>
            </targetUnits>
        </config>
    </roboUnit>

    <roboUnit id="imageController">
        <class>com.robo4j.joystick.tank.controller.ImageController</class>
        <config name="com.robo4j.core.root">
            <value name="target" type="String">imageProcessor</value>
        </config>
    </roboUnit>

    <roboUnit id="imageProcessor">
        <class>com.robo4j.joystick.tank.processor.ImageProcessor</class>
        <config name="com.robo4j.core.root">
            <value name="output" type="String">camera_filed</value>
        </config>
    </roboUnit>

    <roboUnit id="legoController">
        <class>com.robo4j.joystick.tank.controller.LegoPlatformController</class>
        <config name="com.robo4j.core.root">
            <value name="target" type="String">javaFXfield</value>
            <value name="targetOut" type="String">httpClient</value>
            <value name="client" type="String">192.168.22.250</value>
            <value name="clientPort" type="String">8025</value>
            <value name="clientUri" type="String">/controller</value>
        </config>
    </roboUnit>
</robo4j>